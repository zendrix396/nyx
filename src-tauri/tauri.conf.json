{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Nyx",
  "version": "0.1.0",
  "identifier": "com.tauri.dev",
  "build": {
    "frontendDist": "../src/dist",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "windows": [
      {
        "title": "Nyx",
        "width": 350,
        "height": 310,
        "minWidth": 120,
        "minHeight": 80,
        "maxHeight": 600,
        "decorations": false,
        "transparent": true,
        "resizable": true,
        "skipTaskbar": true,
        "visible": false,
        "focusable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      }
    }
  },
  "plugins": {
    "globalShortcut": {
      "desktop": true
    }
  }
}
